<div class="modal fade" id="<%= modal_id %>" tabindex="-1" aria-labelledby="<%= modal_id %>Label" aria-hidden="true">
  <div class="modal-dialog <%= modal_size %>">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="<%= modal_id %>Label"><%= title %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render form_partial %>
      </div>
      <% if show_footer? %>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= cancel_label %></button>
          <button type="button" class="btn btn-primary" id="<%= modal_id %>Submit"><%= submit_label %></button>
        </div>
      <% end %>
    </div>
  </div>
</div>