<div class="<%= wrapper_classes %>">
  <% if visible %>
    <label for="<%= field_id %>" class="form-label small mb-1">
      <%= label_text %><%= required_indicator %>
    </label>

    <%= content %>

    <% if help_text %>
      <div id="<%= field_id %>_help" class="form-text small text-muted mt-1">
        <%= help_text %>
      </div>
    <% end %>

    <% if has_errors? %>
      <div id="<%= field_id %>_feedback" class="invalid-feedback">
        <%= field_errors.first %>
      </div>
    <% end %>
  <% end %>
</div>