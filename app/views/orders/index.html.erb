<%= turbo_frame_tag "customer_orders", data: { turbo_action: "replace" } do %>
  <div class="relationship-section"
       data-relationship-type="orders"
       data-relationship-pattern="view_only">

    <div class="d-flex justify-content-between align-items-center mb-3">
      <h6 class="mb-0"><%= t('customers.relationships.orders.title', default: 'Orders') %></h6>
    </div>

    <%= render TableComponent.new(
      collection: @orders,
      config: Order.table_config.merge(entity_name: 'order'),
      current_params: params
    ) %>
  </div>
<% end %>