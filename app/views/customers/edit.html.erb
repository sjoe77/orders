<%= render PageHeaderComponent.new %>

<div class="container-fluid px-3 pb-4" data-controller="graph-form">

  <!-- Customer Form -->
  <div class="row">
    <div class="col-12">
      <%= render 'form', customer: @customer %>
    </div>
  </div>

  <% if @customer.persisted? %>
    <!-- Relationship Management -->
    <div class="row mt-4">
      <div class="col-12">
        <%= render TabsComponent.new(id: "customer_relationships") do |tabs| %>
          <% tabs.with_tab(title: t('customers.tabs.addresses', default: 'Addresses'), active: true) do %>
            <%= render RelationshipTabComponent.new(
              parent: @customer,
              relationship: :addresses,
              pattern: :nested_attributes,
              default: true
            ) %>
          <% end %>

          <% tabs.with_tab(title: t('customers.tabs.orders', default: 'Orders')) do %>
            <%= render RelationshipTabComponent.new(
              parent: @customer,
              relationship: :orders,
              pattern: :independent_save,
              default: false
            ) %>
          <% end %>

        <% end %>
      </div>
    </div>
  <% else %>
    <!-- New Customer Info -->
    <div class="row mt-4">
      <div class="col-12">
        <div class="alert alert-info border-0 bg-light">
          <div class="d-flex align-items-center">
            <i class="bi bi-info-circle fs-4 me-3 text-primary"></i>
            <div>
              <h6 class="mb-1">Save to Enable Relationship Management</h6>
              <p class="mb-0 small text-muted">
                Once the customer is saved, you'll be able to manage addresses, orders, and view audit history.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

